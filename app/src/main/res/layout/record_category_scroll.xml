<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/khaki"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/record_category_add_category_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/round_add"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:id="@+id/record_category_search_category_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/search"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_divider_gray" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/right_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_divider_gray"
                android:paddingBottom="10dp"
                android:paddingLeft="13dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
