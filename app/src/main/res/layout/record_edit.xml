<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_title_yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/report_edit_back_id"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/nextstep"
            android:rotation="180" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="编辑支出"
            android:textColor="@color/app_51"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/report_edit_complete_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:background="@mipmap/hook" />
    </LinearLayout>

    <include layout="@layout/record_add_fragment_tab" />
</LinearLayout>