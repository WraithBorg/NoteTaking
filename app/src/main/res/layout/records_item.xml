<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="@dimen/dp_4"
    android:paddingStart="@dimen/dp_10">
    <TextView
        android:id="@+id/weekDay_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="周一"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/app_black"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/report_today_item_icon_id"
        android:layout_width="44dp"
        android:layout_height="44dp"

        android:background="@mipmap/rmb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/report_today_item_category_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:textColor="@color/app_black"
                android:textSize="19sp"
                tools:text="唱片专辑" />

            <TextView
                android:id="@+id/report_today_item_money_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center_vertical|start"
                android:maxWidth="150dp"
                android:textColor="@color/app_green"
                android:textSize="22sp"
                tools:text="0.123454" />
        </LinearLayout>

        <TextView
            android:id="@+id/report_today_item_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/sp_14"
            tools:text="09:32 现金" />

    </LinearLayout>
</LinearLayout>