<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="4dp"
    android:paddingEnd="4dp"
    android:paddingBottom="@dimen/dp_4">


    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_item_sum_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:textColor="@color/app_black"
            android:textSize="22sp"
            tools:text="18日" />

        <TextView
            android:id="@+id/record_item_sum_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:maxWidth="150dp"
            android:textColor="@color/app_black_color"
            android:textSize="12sp"
            tools:text="12/2018" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:text="收 "
                android:textColor="@color/app_red"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/record_item_sum_income"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:textColor="@color/app_red"
                android:textSize="13sp"
                tools:text="120.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:maxWidth="150dp"
                android:text="支 "
                android:textColor="@color/app_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/record_item_sum_spend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:maxWidth="150dp"
                android:textColor="@color/app_green"
                android:textSize="13sp"
                tools:text="120.00" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:text="结余"
            android:textColor="@color/app_black_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/record_item_sum_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:maxWidth="150dp"
            android:textColor="@color/app_black_color"
            android:textSize="17sp"
            tools:text="0.1234" />
    </LinearLayout>

    <ImageView
        android:id="@+id/record_item_sum_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:background="@mipmap/nextstep"
        android:rotation="90" />
</LinearLayout>