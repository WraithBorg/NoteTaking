<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showTimer"
                android:text="@string/timer"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="keySave"
                android:text="读写数据"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="storeTheData"
                android:text="读写文件"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="databaseDemo"
                android:text="数据库操作"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:id="@+id/tvLogin_id"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="login"
                android:text="登陆"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="OkHttpTest"
                android:text="OkHttp Test"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showMVP"
                android:text="MVP展示"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showMainViewActivity"
                android:text="侧滑菜单"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showMainViewActivity2"
                android:text="侧滑菜单2"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showMvp2"
                android:text="MVP2"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showAddAccountBook"
                android:text="添加账本"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showDialogFragment"
                android:text="DialogFragment示例"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showTabLayout"
                android:text="TabLayout"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="show2ListView"
                android:text="两个ListView联动"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showBottomDialog"
                android:text="底部弹窗"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showExpandableListView"
                android:text="ExpandableListView"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="showTimeBar"
                android:text="TimeBar"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="demoCamera"
                android:text="相机"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:onClick="cameraAndReturn"
                android:text="拍照返回缩略图"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/linearlayout_line">

            <ImageView
                android:id="@+id/ivResult"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>