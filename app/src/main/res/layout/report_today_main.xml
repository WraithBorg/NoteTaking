<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/app_blue"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="6dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/nextstep"
                android:rotation="180" />

            <TextView
                android:id="@+id/report_today_main_top_time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/app_black"
                android:textSize="21sp"
                tools:text="今天12月10日" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@mipmap/search_black" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@mipmap/plus_black" />
        </LinearLayout>
        <TextView
            android:id="@+id/report_today_main_balance_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0.00"
            android:textSize="30sp"
            android:textColor="@color/app_black"
            android:gravity="center_vertical|start"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_black"
            android:gravity="center_vertical|start"
            android:layout_marginStart="20dp"
            android:textSize="@dimen/sp_14"
            android:text="结余"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/report_today_main_income_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:gravity="center_vertical|start"
                android:textSize="18sp"
                tools:text="0.00"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/report_today_main_spending_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:gravity="center_vertical|start"
                android:textSize="18sp"
                tools:text="0.00"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:text="收入"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/sp_14"
                android:text="支出"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/report_today_main_detail_list_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>