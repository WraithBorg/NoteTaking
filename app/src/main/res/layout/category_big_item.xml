<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_e6"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/app_divider_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/category_item_icon_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/shopping"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/category_item_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_51"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            tools:text="购物"/>
    </LinearLayout>

</LinearLayout>